                   android:textSize="16dp"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Dirección"
                   android:textColor="@color/color_icons"
                   android:textSize="16dp"/>
           </LinearLayout>

       </LinearLayout>


